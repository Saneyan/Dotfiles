[enable]
# Finger
LINK @plan
LINK @project

# Emacs
LINK @emacs.d

# Vim
LINK @vim
LINK ~/.vim/vimrc ~/.vimrc
LINK ~/.vim/nvimrc ~/.nvimrc
RUN mkdir -pv $HOME/.vim/bundle
RUN git clone https://github.com/Shougo/neobundle.vim $HOME/.vim/bundle/neobundle.vim

# ZSH
LINK @zsh.d
LINK ~/.zsh.d/.zshenv ~/.zshenv

# Tmux
LINK @tmux.conf

# Git
LINK @gitignore
LINK @gitconfig

ECHO " * Startup or restart ZSH now."
ECHO " * Don't forget to set your SSH keys and config."

[disable]
# Finger
UNLINK @plan
UNLINK @project

# Emacs
UNLINK @emacs.d

# Vim
UNLINK @vim
UNLINK ~/.vim/vimrc
UNLINK ~/.vim/nvimrc

# ZSH
UNLINK @zsh.d
UNLINK ~/.zsh.d/.zshenv

# Tmux
UNLINK @tmux.conf

# Git
UNLINK @gitignore
UNLINK @gitconfig

[update]
REARCH disable ECHO UNLINK
REARCH enable ECHO LINK
