[info]
AUTHOR "TADOKORO Saneyuki <saneyan@mail.gfunction.com>"
VERSION "0.1.0"
REQUIREMENTS git,cpan,make

[enable]
SRUN cpan Term::ExtendedColor
INSTALL ls--
RUN cd $DMGR_PLUGINDIR/ls--
RUN perl Makefile.PL
RUN make && su -c 'make install'
COPY ls++.conf $HOME/.ls++.conf

[disable]
UNINSTALL ls--
CLEAN
