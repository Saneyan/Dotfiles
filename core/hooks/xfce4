[enable]
if dmgr has "xmonad"; then
  RUN rm -v $HOME/.xmonad/xmonad.o
  UNLINK ~/.xmonad/xmonad.hs
  LINK ~/.xmonad/xfce4.xmonad.hs ~/.xmonad/xmonad.hs
  RUN update-xmonad
fi

[disable]
if dmgr has "xmonad"; then
  RUN rm -v $HOME/.xmonad/xmonad.o
  UNLINK ~/.xmonad/xmonad.hs
  LINK ~/.xmonad/xmonad.xmonad.hs ~/.xmonad/xmonad.hs
  RUN update-xmonad
fi

[update]
REARCH disable ECHO RUN LINK UNLINK
REARCH enable ECHO RUN LINK UNLINK
