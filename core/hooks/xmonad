[enable]
LINK @xmonad

if dmgr has "xfce4"; then
  LINK ~/.xmonad/xfce4.xmonad.hs ~/.xmonad/xmonad.hs
else
  LINK ~/.xmonad/xmonad.xmonad.hs ~/.xmonad/xmonad.hs
fi

RUN $HOME/bin/update-xmonad

[disable]
RUN rm -v $HOME/.xmonad/xmonad.{errors,hi,hs,o} $HOME/.xmonad/xmonad-`uname -m`-linux
UNLINK @xmonad

[update]
REARCH disable ECHO UNLINK RUN
REARCH enable ECHO LINK RUN
