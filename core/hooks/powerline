[info]
AUTHOR "TADOKORO Saneyuki <saneyan@mail.gfunction.com>"
VERSION "0.1.0"
REQUIREMENTS git,pip,sudo

[enable]
INSTALL powerline-fonts
SCOPY "$DMGR_PLUGINDIR/powerline-fonts/Inconsolata/Inconsolata for Powerline.otf" /usr/share/fonts/OTF/
INSTALL powerline
LINK $DMGR_PLUGINDIR/powerline/scripts/powerline $HOME/.local/bin/powerline
SRUN pip install -e $DMGR_PLUGINDIR/powerline
RUN mkdir -pv $HOME/.local/bin
ECHO " * See also: https://powerline.readthedocs.org/en/latest/installation.html"

[disable]
SRUN sudo pip uninstall $DMGR_PLUGINDIR/powerline
UNINSTALL powerline
UNINSTALL powerline-fonts
CLEAN
